extends layout

block body
  div(ng-controller='AppCtrl')
    h2(app-version)
    div.row
      div.three.columns
        form.prepend.append.field(ng-submit="changeInterval()")
          span.adjoined New prices every
          input(class="narrow text input", type="text", placeholder="Text input", ng-model="interval")
          span.adjoined ms

      div.three.columns
        form.append.field(ng-submit="changeNbCompanies()")
          input(class="narrow text input", type="number", min="1", max="500", ng-model="nbCompanies")
          span.adjoined companies

      div.three.columns
        form.append.field(ng-submit="changeNbPricesGenerated()")
          input(class="narrow text input", type="number", min="1", max="500", ng-model="nbPricesGenerated")
          span.adjoined prices changing

      div.three.columns
        form.append.field
          span.adjoined sort by
          select(class="text input", ng-model="orderBy")
            option(value="price") price
            option(value="symbol") symbol
            option(value="variation") variation

    ul.menu
      li
        a(href='angular') AngularJS
      li
        a(href='react') ReactJS

    div(ng-view)

  script(src='/socket.io/socket.io.js')
  script(src='bower_components/angular/angular.js')
  script(src='bower_components/angular-route/angular-route.js')
  script(src='bower_components/angular-socket-io/socket.js')
  script(src='bower_components/lodash/dist/lodash.min.js')
  script(src='bower_components/react/react.min.js')
  script(src='bower_components/react/JSXTransformer.js')
  script(src='js/reactComponents.js',type="text/jsx")
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
